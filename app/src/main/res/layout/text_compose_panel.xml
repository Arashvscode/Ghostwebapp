<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<HorizontalScrollView
			android:id="@+id/hscroll1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/panel_btn_select_all"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="5dp"
					android:padding="3dp"
					android:src="@drawable/alls"
					android:scaleType="fitXY" />
				<ImageView
					android:id="@+id/panel_btn_copy"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginRight="6dp"
					android:padding="3dp"
					android:src="@drawable/copys"
					android:scaleType="fitXY" />
				<ImageView
					android:id="@+id/panel_btn_paste"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginRight="6dp"
					android:padding="3dp"
					android:src="@drawable/pastecode"
					android:scaleType="fitXY" />
				<ImageView
					android:id="@+id/panel_btn_cut"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginRight="13dp"
					android:padding="3dp"
					android:src="@drawable/cuts"
					android:scaleType="fitXY" />
			</LinearLayout>
		</HorizontalScrollView>
	</LinearLayout>
</LinearLayout>
