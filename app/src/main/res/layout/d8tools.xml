<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<androidx.cardview.widget.CardView
		android:id="@+id/mcard"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#1F1B1C"
		android:orientation="vertical"
		app:cardElevation="10dp"
		app:cardCornerRadius="20dp">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview1"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="D8Tools"
					android:textSize="18sp"
					android:textColor="#FDA893"
					android:fontFamily="@font/GhostFont"
					 />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/tvin"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					style="@style/Widget.Material3.TextInputLayout.FilledBox"
					
					app:boxStrokeColor="#FFFFB9"
					app:hintTextColor="#FFFFB9"
					android:textColorHint="#FFFFB9">
					<EditText
						android:id="@+id/inputjar"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#FDA893"
						android:hint="inputjar"
						android:textColorHint="#FDA893"
						android:focusable="true"
						
						android:fontFamily="@font/GhostFont" />
				</com.google.android.material.textfield.TextInputLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/tvou"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_weight="1"
					style="@style/Widget.Material3.TextInputLayout.FilledBox"
					
					app:boxStrokeColor="#FFFFB9"
					app:hintTextColor="#FFFFB9"
					android:textColorHint="#FFFFB9">
					<EditText
						android:id="@+id/outputjar"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:background="@android:color/transparent"
						android:textSize="14sp"
						android:textColor="#FDA893"
						android:hint="outputjar"
						android:textColorHint="#FDA893"
						android:focusable="true"
						
						android:fontFamily="@font/GhostFont" />
				</com.google.android.material.textfield.TextInputLayout>
				<Button
					android:id="@+id/setoutput"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="ouput"
					android:textSize="12sp"
					android:textColor="#FFFFFF"
					android:fontFamily="@font/GhostFont" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear6"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ProgressBar
					android:id="@+id/pro"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:indeterminate="true"
					style="?android:progressBarStyleHorizontal" />
				<Button
					android:id="@+id/convert"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="convert"
					android:textSize="12sp"
					android:textColor="#FFFFFF"
					android:fontFamily="@font/GhostFont" />
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
